    x:Class="BeenPwned.App.Core.Views.ErrorView">
	<ContentView.Content>
         <StackLayout VerticalOptions="Center" Padding="20,0,20,40" Spacing="10">
            <Label Text="&#x0001F494;" FontSize="100" VerticalOptions="Center" HorizontalOptions="Center" />
