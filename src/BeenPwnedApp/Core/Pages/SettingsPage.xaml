    <TableView Intent="Settings">
        <TableView.Root>
            <TableSection Title="Settings">
                <local:AccessoryViewCell Accessory="disclosure">
                    <Grid HeightRequest="60">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenPushSettingsCommand}" />
                        </Grid.GestureRecognizers>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout VerticalOptions="Center" Grid.Column="0">
                            <Label Margin="20,0,20,0" VerticalTextAlignment="Center" Text="Push notifications" />
                        </StackLayout>
                    </Grid>
                </local:AccessoryViewCell>
            </TableSection>
            <TableSection Title="About">
                <local:AccessoryViewCell Accessory="disclosure">
                    <Grid HeightRequest="60">
                        <Grid.GestureRecognizers>
